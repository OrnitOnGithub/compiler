{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Kathleen",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "//.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.kl",
					"match": "\\b(break|loop|=|let|const|int|str|print|println|inc)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.kl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.kl"
}